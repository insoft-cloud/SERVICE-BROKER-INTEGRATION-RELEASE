server:
  port: <%= p('server.port')%>

spring:
  application:
    name: service-broker-integration
  datasource:
    driver-class-name: org.mariadb.jdbc.Driver
    url: "jdbc:mariadb://<%= link('broker-mariadb-link').instances[0].address %>:<%= link('broker-mariadb-link').p('port') %>/broker?autoReconnect=true&useUnicode=true&characterEncoding=utf8&serverTimezone=Asia/Seoul"
    username: <%= link('broker-mariadb-link').p('admin.username') %>
    password: <%= link('broker-mariadb-link').p('admin.password') %>
  jpa:
    generate-ddl: true
    hibernate:
      ddl-auto: none
      show-sql: true
  rabbitmq:
    host: <%= p('spring.rabbitmq.host')%>
    port: <%= p('spring.rabbitmq.port')%>
    username: <%= p('spring.rabbitmq.username')%>
    password: <%= p('spring.rabbitmq.password')%>

broker:
  username: admin
  password: cloudfoundry

portal:
  api:
    url: <%= p('portal.api.url') %>
    security:
      username: <%= p('portal.api.security.username') %>
      password: <%= p('portal.api.security.password') %>
bosh:
  client_id: <%= p('bosh.client_id') %>
  client_secret:  <%= p('bosh.client_secret') %>
  url: <%= p('bosh.url') %>
  oauth_url: <%= p('bosh.oauth_url') %>
  redis_job_name: redis
  rabbitmq_job_name: rmq
  mariadb_job_name: mariadb

config:
  rabbitmq:
    queue-name: <%= p('config.rabbitmq.queue-name') %>
    exchange-name: <%= p('config.rabbitmq.exchange-name') %>
    routing-key: <%= p('config.rabbitmq.routing-key') %>
